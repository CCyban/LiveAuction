<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="540.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.ccyban.liveauction.client.controllers.auction.listController">
   <children>
      <VBox minWidth="-Infinity" prefWidth="200.0" spacing="15.0">
         <children>
            <Label minWidth="-Infinity" prefHeight="161.0" prefWidth="200.0" text="List of Auctions" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Tip: Click on an auction to explore more about it" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <VBox fx:id="vBoxAuctionFilters" alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Auction Filters:">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </VBox>
         </children>
         <HBox.margin>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
         </HBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="15.0" HBox.hgrow="ALWAYS">
         <children>
            <TableView fx:id="tableViewAuctions" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#onOpenAuction" text="Open Auction">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
         <HBox.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
