<GridPane fx:controller="com.github.ccyban.liveauction.client.controllers.authentication.loginController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" prefWidth="800" prefHeight="480">
    <children>
        <Label focusTraversable="false" text="Welcome" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
            <font>
                <Font size="96.0" />
            </font>
            <effect>
                <Glow level="0.5" />
            </effect>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </Label>
        <Label focusTraversable="false" text="Username:" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <TextField fx:id="textFieldUsernameInput" onAction="#onEnter" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
                <Font size="24.0" />
            </font>
        </TextField>
        <Label focusTraversable="false" text="Password:" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <PasswordField fx:id="passwordFieldPasswordInput" onAction="#onEnter" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <font>
                <Font size="24.0" />
            </font>
        </PasswordField>
        <Button fx:id="buttonSignIn" mnemonicParsing="false" onAction="#onClick" text="Sign In" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER" GridPane.rowIndex="3">
            <font>
                <Font size="36.0" />
            </font>
        </Button>
    </children>
</GridPane>